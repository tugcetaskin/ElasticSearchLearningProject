@using ElasticsearchWeb.ViewModel
@model List<BlogResultViewModel>
@{
	ViewData["Title"] = "Search";
}

<div class="container">
	<div class="col-md-10 offset-md-1">
		<form asp-action="Search">
			<div class="mb-3">
				<label>Search(Title | Content)</label>
				<input name="searchText" class="form-control" value="@ViewBag.SearchText" />
			</div>
			<button type="submit" class="btn btn-primary">Search</button>
		</form>

		@if (!Model.Any())
		{
			<div class="alert alert-info">Eşleşen Sonuç Bulunamadı</div>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Title</th>
						<th>Tags</th>
						<th>Created</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.Title</td>
							<td>@item.Tags</td>
							<td>@item.Created.ToString("dd/mm/yyyy")</td>
						</tr>
					}
				</tbody>
			</table>
		}
	</div>
</div>